<style type="text/css">
    body {font-size: 12px;text-align:center;}
    #report {margin-left:auto;margin-right:auto; width:180mm;}
    #report-title {width:100%; text-align:center; clear:both;}
    #report-title p {text-align:center;}
    #table {float:left; width:100%; clear:both;}
    #table table th {font-size: 12px;border-top:1px solid black;}
    #table table td {text-align:right;font-size: 12px;}
    #table table td.left {text-align:left;}
    #table table td.center {text-align:center;}
    #report-end {width:100%; height:45px; clear:both;}
    .inline {width:100%; float:left; clear:both; height:20px;}
    
    .border-left-bottom {border-left:1px solid black;border-bottom:1px solid black;}
    .border-right-bottom {border-right:1px solid black;border-bottom:1px solid black;}
    .border-left-right-bottom {border-left:1px solid black;border-right:1px solid black;border-bottom:1px solid black;}
</style>
<!--startprint-->
<% @receipts.each do |receipt| %>
<div id="report">
  <div id="report-title">
    <div class="inline">
          <div style="float:left; width:100%; text-align:center;font-size: 15px; "></div>
      </div>
      <div class="inline">
          <div style="float:left; width:100%; text-align:center;font-size: 15px; "><%= receipt[:title] %> </div>
      </div>
      <div class="inline">
          <div style="float:right; width:100%; text-align:right; "></div>
      </div>
      <div class="inline">
        <div style="float:left; width:100%; text-align:left; ">尊敬的 <font style="text-decoration: underline;"><%= receipt[:house_info] %></font></div>
        
      </div>
  </div>
  <div id="table">
    <h1></h1>
      <table style="width:100%;" cellpadding="0" cellspacing="0" >
        <tr>
            <th class="left border-left-bottom">应收款项</th>
            <th class="border-left-bottom">费用期间</th>
            <th class="border-left-bottom">应收金额</th>
            <th class="border-left-bottom">已付金额</th>
            <th class="border-left-bottom">本次冲销</th>
            <th class="border-left-right-bottom">欠费金额</th>
          </tr>
          <% receipt[:details].each do |detail| %>
            <tr>
              <td class="left border-left-bottom"><span style="padding-left: 5px;"><%= detail[:item_name] %> </span></td>
              <td class="center border-left-bottom"><span style="padding-left: 5px;"><%= detail[:trans_time] %></span></td>
              <td class="border-left-bottom"><span style="padding-right: 5px;"><%= detail[:money] %></span></td>
              <td class="border-left-bottom"><span style="padding-right: 5px;"><%= detail[:pay_money] %></span></td>
              <td class="border-left-bottom"><span style="padding-right: 5px;"><%= detail[:push] %></span></td>
              <td class="border-left-right-bottom"><span style="padding-right: 5px;"><%= detail[:sub_money] %></span></td>
            </tr>
          <% end %>
          <tr>
            <td class="left border-left-bottom"><span style="padding-left: 5px;">合计</span></td>
            <td class="border-left-bottom">&nbsp;</td>
            <td class="border-left-bottom"><span style="padding-right: 5px;"><%= receipt[:total_money] %></span></td>
            <td class="border-left-bottom"><span style="padding-right: 5px;"><%= receipt[:total_pay_money] %></span></td>
            <td class="border-left-bottom"><span style="padding-right: 5px;"><%= receipt[:total_push] %></span></td>
            <td class="border-left-right-bottom"><span style="padding-right: 5px;"><%= receipt[:total_sub_money] %></span></td>
          </tr>
      </table>
  </div>
  <div id="report-end">
      <div class="inline">
        <div style="text-align:left;width:100%;">
          </div>
      </div>
      <div class="inline">
        <div id="note" style="float:left; width:100%;text-align:left; ">本公司现特函通知，敬请阁下尽快到物管处缴纳欠费</div>
      </div>
      <div class="inline">
        <div style="float:left; width:60%;text-align:left; "></div>
        <div style="float:right; width:20%; text-align:right; ">催款日期：<%= Date.today %></div>
      </div>
  </div>
</div>
<br/>
<br/>
<br/>
<br/>
<br/>
<br/>
<% end %>
<!---endprint-->
