<%= render :partial => 'shared/error_messages', :locals => {:target => @user} %>
<%= form_tag add_user_role_path, class: 'form-horizontal' do %>
  <fieldset>
    <div id="legend">
      <legend>设置用户角色</legend>
    </div>
    <div class="control-group">
      <%= label_tag '用户', nil, class: 'control-label' %>
      <div class="controls">
        <%= h @user.email %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag '角色', nil, class: 'control-label' %>
      <div class="controls">
        <% for role in @roles %>
          <label class="checkbox">
            <%= check_box_tag 'user[role_ids][]', role.id, @user.roles.include?(role) %>
            <%= role.name %>
          </label>
        <% end %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button id="btnSubmit" class="btn btn-primary">保存</button>
        <%= link_to '返回', users_path, class: 'btn' %>
      </div>
    </div>


  </fieldset>
<% end %>

