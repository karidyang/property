<script type="text/javascript">
  $(document).ready(function () {
    $("#notice_expire_date").datetimepicker({
      format: 'yyyy-mm-dd',
      minView: 'month',
      autoclose: true,
      todayBtn: true,
      todayHighlight: true
    });

  });
</script>
<%= render :partial => 'shared/error_messages', :locals => {:target => @notice} %>
<%= form_for(@notice, :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <div id="legend">
      <legend><%= header_name %></legend>
    </div>
    <div class="control-group">
      <%= f.label '主题', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :topic, :class => 'input-xlarge' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '类型', :class => 'control-label' %>
      <div class="controls">
        <!-- Inline Radios -->
        <label class="radio inline">
          <%= radio_button(:notice, :publish_type, '1', :checked => 'checked') %> 全局公告
        </label>
        <label class="radio inline">
          <%= radio_button(:notice, :publish_type, '2') %> 特定公告
        </label>
        <!-- Inline Radios -->
      </div>
    </div>
    <div class="control-group">
      <%= f.label '过期时间', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :expire_date, :class => 'input-small' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '内容', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content, :style => 'width: 400px; height: 400px;' %>
      </div>
    </div>

    <div class="control-group">

      <div class="controls">
        <button id="btnSubmit" class="btn btn-primary">提交</button>
        <%= link_to '返回', notices_path, :class => 'btn' %>
      </div>
    </div>

  </fieldset>
<% end %>
