<fieldset>
  <legend>角色列表</legend>
  <div class="container-fluid">
    <div class="input-append">
      <%= link_to '新增', new_role_path, :class => 'btn' %>
    </div>
  </div>
  <div class="container-fluid">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
      <tr>

        <th>角色名称</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @roles.each do |role| %>
          <tr>
            <td><%= link_to role.name, edit_role_path(role) %></td>
            <td>
              <%= link_to '删除', role, :confirm => '你确定吗?', :method => :delete, class: 'btn' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @roles %>

  </div>
</fieldset>