<script type="text/javascript" src="assets/bootstrap.min.js"></script>
<link href="assets/bootstrap.min.css" rel="stylesheet" media="screen">
<link href="assets/bootstrap-responsive.min.css" rel="stylesheet">
<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }
    .form-signin {
        max-width: 400px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
        -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
        box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
    }

    .form-signin .form-signin-heading,
    .form-signin .checkbox {
        margin-bottom: 10px;
    }

    .form-signin input[type="text"],
    .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
    }

</style>
<div class="container">
<%= form_tag(choose_plot_path, :class => 'form-signin') do %>
      <!--<h2 class="form-signin-heading">请选择小区并输入房间号码</h2>-->
      <h2 class="form-signin-heading">请选择小区</h2>

      <%= label_tag :current_plot, '选择小区', :class => "control-label" %>
        <%= select_tag :current_plot, options_for_select(all_plots), :class=>'input-block-level' %>
      <!--<%= label_tag :house_code, '房间号', :class => "control-label" %>-->
        <!--<%= text_field_tag :house_code, nil, :placehold=>'房间号',:class=>'input-block-level' %>-->

      <button type="submit" class="btn btn-large btn-primary">进入</button>

<% end %>

</div>
