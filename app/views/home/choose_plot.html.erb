<%= form_tag(choose_plot_path, :method => :get, :class => 'form-horizontal') do %>
    <div class="control-group">
      <%= label_tag :current_plot, '选择小区', :class => "control-label" %>
      <div class="controls">
        <%= select_tag :current_plot, options_for_select(all_plots) %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">提交</button>
      </div>
    </div>


<% end %>


