<%= render :partial => 'shared/error_messages', :locals => {:target => @house} %>
<%= form_tag bind_charges_path, class: 'form-horizontal' do %>
  <fieldset>
    <div id="legend">
      <legend>绑定收费项</legend>
    </div>
    <div class="control-group">
      <%= label_tag '房号', nil, class: 'control-label' %>
      <div class="controls">
        <%= h @house.house_code %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag '业主', nil, class: 'control-label' %>
      <div class="controls">
        <%= h @house.owner_name %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag '收费项目', nil, class: 'control-label' %>
      <div class="controls">
        <% @charges.each do |charge| %>
          <label class="checkbox">
            <%= check_box_tag 'house[charge_ids][]', charge.id, @house.charges.include?(charge) %>
            <%= charge.item_name %> <%= charge.price %>元
          </label>
        <% end %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button id="btnSubmit" class="btn btn-primary">保存</button>
        <%= link_to '返回', users_path, class: 'btn' %>
      </div>
    </div>


  </fieldset>
<% end %>

