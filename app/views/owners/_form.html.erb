<%= render :partial => 'shared/error_messages', :locals => {:target => @owner} %>

<%= form_for(@owner, :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <div id="legend">
      <legend><%= header_name %></legend>
    </div>
    <div class="control-group">
      <%= f.label '姓名', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '年龄', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :age %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">性别</label>

      <div class="controls">
        <label class="radio inline">
          <%= f.radio_button(:sex, true) %>
          男
        </label>
        <label class="radio inline">
          <%= f.radio_button(:sex, false) %>
          女
        </label>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '电话', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '身份证', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :id_card %>
      </div>
    </div>
    <div class="control-group">

      <div class="controls">
        <button id="btnSubmit" class="btn btn-primary">提交</button>
        <a href="<%= houses_path %>" class="btn">返回</a>
      </div>
    </div>
  </fieldset>
<% end %>

